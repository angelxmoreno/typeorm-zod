{
    "git": {
        "commitMessage": "chore: release v${version}",
        "tagName": "v${version}"
    },
    "npm": {
        "publish": true
    },
    "github": {
        "release": true
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    },
    "hooks": {
        "before:init": ["bun run lint:fix", "bun run lint", "bun run check-types", "bun test"],
        "after:bump": ["bun run lint:fix"],
        "before:release": "bun run build"
    }
}
